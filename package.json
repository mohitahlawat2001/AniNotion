{
  "name": "aninotion-app",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd aninotion-backend && npm run dev",
    "client": "cd aninotion-frontend && npm run dev",
    "seed": "cd aninotion-backend && node scripts/seedCategories.js",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd aninotion-frontend && npm run lint",
    "lint:backend": "cd aninotion-backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  }
}
